<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="view_hr_config_data_migration" model="ir.ui.view">
			<field name="name">Data Migration</field>
			<field name="model">hr.config.data.migration</field>
			<field name="arch" type="xml">
				<form string="Data Migration" class="oe_form_configuration">
					<separator string="Data Migration"/>
					<group>
						<div>
							<div>
								<label for="name" string="Name"/>
								<field name="name"/>
							</div>
						</div>
					  
					</group>
					<group>
						<div>
							<button string="Change Employee Name" type="object" name="changeEmployeeName" class="oe_highlight" help="Use this to update employee name"/>
						</div>
					</group>
				</form>
			</field>
		</record>

		<record id="action_data_migration" model="ir.actions.act_window">
			<field name="name">Data Migration</field>
			<field name="res_model">hr.config.data.migration</field>
			<field name="view_mode">form</field>
			<field name="target">inline</field>
		</record>

		<menuitem action="action_data_migration" id="menu_action_data_migration" parent="menu_data_migration" name="Data Migration Files" sequence="10"/> 

	</data>
</odoo>