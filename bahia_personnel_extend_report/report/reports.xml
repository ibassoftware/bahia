			<field name="arch" type="xml">

				<xpath expr="//notebook[@name='nb_1']/page[@name='pg_1']/field[@name='personnel_actived_on_board']/tree/field[@name='first_name']" position="after" >
					<field name="middle_name"/>
					<field name="gender"/>
