<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="employee_checklist_user_rule" model="ir.rule">
            <field name="name">Employee Checklist Information</field>
                <field name="model_id" ref="model_hr_employee"/>
            <field name="domain_force">[('user_id','=',user.id)]
            </field>
            <field name="groups" eval="[(4,ref('ibas_bahia.group_hr_portal'))]"/>
        </record>
        <record id="employee_public_checklist_user_rule" model="ir.rule">
            <field name="name">Employee Checklist Information (Public)</field>
                <field name="model_id" ref="hr.model_hr_employee_public"/>
            <field name="domain_force">[('user_id','=',user.id)]
            </field>
            <field name="groups" eval="[(4,ref('ibas_bahia.group_hr_portal'))]"/>
        </record>
    </data>
</odoo>
