<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="action_report_personnel_active_on_board_with_remarks" model="ir.actions.report">
            <field name="name">Personnel Active on Board with Remarks</field>
            <field name="model">hr.personnel.withrmks.main</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">ibas_bahia.report_personnel_active_on_board_w_remarks_document</field>
            <field name="report_file">ibas_bahia.report_personnel_active_on_board_w_remarks_document</field>
            <field name="print_report_name">('Personnel Active on Board with Remarks')</field>
            <field name="binding_model_id" ref="model_hr_personnel_withrmks_main"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_personnel_active_on_board_w_remarks_document">
            <t t-set="o" t-value="doc"/>
            <t t-call="web.external_layout">
                <div class ="page">
                    <div>
                        <h1> Crewlist Active on Board with Remarks</h1>
                    </div>
                    <div>
                        <b>Vessel :</b> <span t-field="o.vessel" />
                    </div>
                    <t t-if = "o.date_search">
                        <div>
                            <b>Date : </b> <span t-field="o.date_search" />
                        </div>                                
                    </t>
                     <t t-if = "not o.date_search">
                        <div>
                            <b>Search All Vessel</b>
                        </div>                                
                    </t>                           
                    <table class="table table-condensed" style="width:100%;border-collapse:collapse">
                        <thead style ="border-bottom: 1px solid black;">
                            <tr>
                                <th>Employee Number</th>
                                <th>CCL Number</th>
                                <th>Department</th>                                        
                                <th>Rank</th>
                                <th>Last Name</th>
                                <th>First Name</th>                                        
                                <th>Birth Date</th>
                                <th>Status</th>
                                <th>Service from</th>
                                <th>Service to</th>
                                <th>Remarks</th>
                            </tr>
                        </thead>
                        <tbody style ="border-bottom: 1px solid black;">
                            <t t-foreach="o.personnel_actived_on_board" t-as="aob">
                                <tr >
                                    <td><span t-field="aob.employee_number"/></td>
                                    <td><span t-field="aob.ccl_number"/></td>
                                    <td><span t-field="aob.employment_dept_code"/></td>
                                    <td><span t-field="aob.employment_rank"/></td>
                                    <td><span t-field="aob.last_name"/></td>
                                    <td><span t-field="aob.first_name"/></td>
                                    <td><span t-field="aob.birth_date"/></td>
                                    <td><span t-field="aob.employment_status"/></td>
                                    <td><span t-field="aob.date_servicefrom"/></td>
                                    <td><span t-field="aob.date_serviceto"/></td>
                                    <td><span t-field="aob.remarks"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>                            
                </div>
            </t>
        </template>

    </data>
</odoo>
